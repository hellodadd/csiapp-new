<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="@dimen/toolbar_size"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#F7F7F7"
        android:layout_below="@+id/toolbar"
        android:isScrollContainer="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/red_title"
                android:textColor="#F9574B"
                android:textSize="16sp"
                android:paddingTop="16sp"
                android:paddingLeft="16sp"
                android:paddingBottom="16sp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/item_name"
                    android:textSize="@dimen/create_vp2_textsize"
                    android:textColor="#FF999999"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FFFF0000"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                </LinearLayout>

                <com.android.csiapp.Crime.utils.ClearableEditText
                    android:id="@+id/item_name_editView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:textColor="#ff3e3e3e"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/brand_model"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/create_vp2_textsize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FFFF0000"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                </LinearLayout>


                <com.android.csiapp.Crime.utils.ClearableEditText
                    android:id="@+id/brand_model_editView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:textColor="#ff3e3e3e"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/amount"
                    android:textSize="@dimen/create_vp2_textsize"
                    android:textColor="#FF999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FFFF0000"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
                </LinearLayout>


            <com.android.csiapp.Crime.utils.ClearableEditText
                    android:id="@+id/amount_editView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:textColor="#ff3e3e3e"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/value"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/create_vp2_textsize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FFFF0000"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                </LinearLayout>

            <com.android.csiapp.Crime.utils.ClearableEditText
                    android:id="@+id/value_editView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:textColor="#ff3e3e3e"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/feature_description"
                    android:textSize="@dimen/create_vp2_textsize"
                    android:textColor="#FF999999" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FFFF0000"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
                </LinearLayout>

                <com.android.csiapp.Crime.utils.ClearableEditText
                    android:id="@+id/feature_description_editView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:singleLine="false"
                    android:textColor="#ff3e3e3e"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
